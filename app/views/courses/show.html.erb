<p id="notice"><%= notice %></p>
<div class="container-fluid well container-md-6">
  <h2 class="h2-serie"> <%= @course.name %>
  </h2>
</div>

<div class="container-fluid well container-md-6">
  <div class="row">
    <div class="col-sm-2 col-md-5" id="serie-description">
      <p> <strong>Horas: </strong> <%=@course.hour %> </p>
      <p> <strong>Profesor: </strong>
        <%=@course.teacher%>
      </p>


    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-2 col-md-2" >
      <div class="btn-group mr-2" role="group">
        <%if current_user.admin?%>
          <%= link_to 'Edit', edit_course_path(@course), class: 'btn btn-info', :type => 'button' %>
        <%end%>
        <%= link_to 'Back', courses_path, class: 'btn btn-info', :type => 'button' %>
      </div>
    </div>
  </div>
</div>
